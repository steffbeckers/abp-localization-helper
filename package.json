{
  "name": "abp-localization-helper",
  "displayName": "ABP Localization Helper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abp-localization-helper.fetchLocalizations",
        "title": "ABP Localization Helper: Fetch localizations"
      },
      {
        "command": "abp-localization-helper.localizeString",
        "title": "ABP Localization Helper: Localize String"
      }
    ],
    "configuration": {
      "title": "ABP Localization Helper",
      "properties": {
        "abp-localization-helper.activeCultureName": {
          "type": "string",
          "default": "en"
        },
        "abp-localization-helper.apiUrl": {
          "type": "string"
        },
        "abp-localization-helper.cultureNames": {
          "type": "array",
          "default": [
            "en",
            "nl"
          ],
          "items": {
            "type": "string"
          }
        },
        "abp-localization-helper.defaultResourceName": {
          "type": "string"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
